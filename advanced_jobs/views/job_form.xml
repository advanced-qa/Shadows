<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="additional_fields_job_form" model="ir.ui.view">
        <field name="name">additional.fields.job.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">

                <field name="email_from" position="before">
                    <field name="partner_dob"/>
                    <field name="partner_gender"/>
                    <field name="partner_nationality"/>
                    <field name="partner_residence"/>
                </field>

                <field name="partner_mobile" position="after">
                    <field name="partner_whatsapp"/>
                    <field name="partner_skype"/>
                    <field name="partner_linkedin"/>
                </field>

                <field name="department_id" position="after">
                    <field name="education"/>
                    <field name="certification"/>
                    <field name="experience"/>
                    <field name="current_position"/>
                    <field name="current_employer"/>
                </field>

        </field>
        </record>
</odoo>
