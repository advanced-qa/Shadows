<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_hr_recruitment.apply">
        <t t-call="website.layout">
            <t t-set="additional_title">Apply Job</t>

            <div id="wrap" class="container">
                <h1 class="text-center mt-2">
                    Job Application Form
                </h1>
                <h2 t-if="job" class="text-center text-muted">
                    <span t-field="job.name"/>
                </h2>

                <div class="row mt-3">
                    <section id="forms" class="col">
                        <span class="hidden" data-for="hr_recruitment_form"
                              t-att-data-values="{'department_id': job and job.department_id.id or '', 'job_id': job and job.id or ''}"/>
                        <form id="hr_recruitment_form" action="/website_form/" method="post" class="s_website_form"
                              enctype="multipart/form-data" data-model_name="hr.applicant"
                              data-success_page="/job-thank-you" hide-change-model="true">

                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_name">Your name</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="partner_name"
                                           required=""/>
                                </div>
                            </div>
                            <!-- Date of Birth-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_dob">Date of birth</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="date" class="datetimepicker-input form-control" name="partner_dob"
                                           required=""/>
                                </div>
                            </div>
                            <!-- Gender -->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_gender">Gender</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <select class="form-control" name="partner_gender">
                                        <option></option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Nationality -->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_nationality">Nationality</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <select class="form-control" name="partner_nationality">
                                        <option></option>
                                        <option t-foreach="countries" t-as="country" t-att-value="country.id">
                                            <t t-esc="country.name"/>
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <!-- Country Of Residence -->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_residence">Country of residence</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <select class="form-control" name="partner_residence">
                                        <option></option>
                                        <option t-foreach="countries" t-as="country" t-att-value="country.id">
                                            <t t-esc="country.name"/>
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <!-- Email -->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="email_from">Your email</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="email" class="form-control o_website_form_input" name="email_from"
                                           required=""/>
                                </div>
                            </div>
                            <!--Phone Number-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_mobile">Your phone number</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="partner_mobile"
                                           placeholder="Including country code..."
                                           required=""/>
                                </div>
                            </div>
                            <!-- Phone number 2-->
                            <div class="form-group row form-field">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_phone">Phone number 2</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="partner_phone"
                                    placeholder="Including country code..."/>
                                </div>
                            </div>
                            <!-- Whatsapp number-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_whatsapp">Whatsapp number</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="partner_whatsapp"
                                           required="" placeholder="Including country code..."/>
                                </div>
                            </div>
                            <!-- Skype-->
                            <div class="form-group row form-field">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_skype">Skype</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="partner_skype"/>
                                </div>
                            </div>
                            <!-- Linked In-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="partner_linkedin">Linkedin</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="partner_linkedin"
                                           required=""/>
                                </div>
                            </div>
                            <!--Education-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="education">Education</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="education"
                                           required=""/>
                                </div>
                            </div>
                            <!-- Certification -->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="certification">Certification</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="certification"
                                           required=""/>
                                </div>
                            </div>
                            <!--Years of relevant experience-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="experience">Years of relevant experience</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="experience"
                                           required=""/>
                                </div>
                            </div>
                            <!--Current position-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="current_position">Current position</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="current_position"
                                           required=""/>
                                </div>
                            </div>
                            <!--Current Employer-->
                            <div class="form-group row form-field o_website_form_required_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="current_employer">Current employer</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="text" class="form-control o_website_form_input" name="current_employer"
                                           required=""/>
                                </div>
                            </div>
                            <div class="form-group row form-field">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="description">Short Introduction</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <textarea class="form-control o_website_form_input" name="description"></textarea>
                                </div>
                            </div>
                            <div class="form-group row form-field o_website_form_custom">
                                <div class="col-lg-3 col-md-4 text-right">
                                    <label class="col-form-label" for="Resume">Resume</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="file" class="form-control o_website_form_input" name="Resume"/>
                                </div>
                            </div>
                            <div class="form-group row form-field d-none">
                                <div class="col-lg-3 col-md-4">
                                    <label class="col-form-label" for="job_id">Job</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="hidden" class="form-control o_website_form_input" name="job_id"/>
                                </div>
                            </div>
                            <div class="form-group row form-field d-none">
                                <div class="col-lg-3 col-md-4">
                                    <label class="col-form-label" for="department_id">Department</label>
                                </div>
                                <div class="col-lg-7 col-md-8">
                                    <input type="hidden" class="form-control o_website_form_input"
                                           name="department_id"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                    <a href="#" role="button" class="btn btn-primary btn-lg o_website_form_send">
                                        Submit
                                    </a>
                                    <span id="o_website_form_result"></span>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </t>
    </template>
</odoo>