<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="document_expiry_reminder" model="ir.cron">
        <field name="name">Document Expiration</field>
        <field name="model_id" ref="model_document_document"/>
        <field name="state">code</field>
        <field name="code">model.mail_reminder()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="document_management.view_document_document_form" model="ir.ui.view">
        <field name="name">Document Form</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <form string="Document View">
                <header>
                    <button name="action_document_send" string="Send by Mail" type="object" class="oe_highlight"/>
                    <button name="revise_document" class="btn-primary pull-right"
                            attrs="{'invisible': [('revised_document_id', '!=', False)]}" type="object"
                            string="Revise"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="document" filename="name" colspan="2"/>
                            <field name="directory_id" colspan="2"/>
                            <field name="department_id"/>
                            <field name="name" colspan="2"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags" colspan="2"/>
                            <field name="active"/>
                            <field name="create_date"/>
                            <field name="__last_update"/>
                        </group>
                        <group>
                            <field name="parent_document_id" colspan="2" readonly="1"/>
                            <field name="revised_document_id" colspan="2" readonly="1"/>
                            <field name="revision_no" colspan="2"/>
                            <field name="company_id" invisible="1" groups="base.group_multi_company"/>
                            <field name="expiry_date"/>
                            <field name="notification_period"/>
                        </group>
                        <field name="description" placeholder="Description" nolabel="1"/>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_document_details" model="ir.ui.view">
        <field name="name">view.document.details</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="document" filename="name" colspan="2" readonly="1"/>
                            <field name="directory_id" colspan="2" readonly="1"/>
                            <field name="name" colspan="2" readonly="1"/>
                            <field name="user_ids" widget="many2many_tags" readonly="1"/>
                            <field name="tag_ids" widget="many2many_tags" colspan="2" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="__last_update" readonly="1"/>
                        </group>
                        <group>
                            <field name="parent_document_id" colspan="2" readonly="1"/>
                            <field name="revised_document_id" colspan="2" readonly="1"/>
                            <field name="revision_no" colspan="2" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <field name="expiry_date" readonly="1"/>
                            <field name="notification_period" readonly="1"/>
                        </group>
                        <field name="description" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="document_additional.action_show_sub_folders" model="ir.actions.act_window">
<!--        <field name="name">Directory</field>-->
        <field name="res_model">document.directory</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('parent_id','=',active_id)]</field>
        <field name="context">{'default_parent_id': active_id}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Directory.
            </p>
        </field>
    </record>

    <record id="document_management.document_directory_form_view" model="ir.ui.view">
        <field name="name">document.directory.form</field>
        <field name="model">document.directory</field>
        <field name="arch" type="xml">
            <form string="Document Directory">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(document_additional.action_show_sub_folders)d"
                                type="action" string="Sub Folders"
                                icon="fa-folder">
                        </button>
                        <button class="oe_stat_button" name="%(document_management.action_directory_document)d"
                                type="action"
                                icon="fa-files-o">
                            <field string="Documents" name="document_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="parent_id"/>
                        <field name="department_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="user_ids" widget="many2many_tags"/>
                        <field name="tag_ids" widget="many2many_tags" colspan="2"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
