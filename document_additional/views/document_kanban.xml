<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="document_management.view_document_document_kanban" model="ir.ui.view">
        <field name="name">Document Kanban</field>
        <field name="model">document.document</field>
        <field name="arch" type="xml">
            <kanban string="Document View">
                <field name="id"/>
                <field name="document"/>
                <field name="directory_id"/>
                <field name="mimetype"/>
                <field name="name"/>
                <field name="tag_ids"/>
                <field name="user_ids"/>
                <field name="company_id"/>
                <field name="parent_document_id"/>
                <field name="revised_document_id"/>
                <field name="revision_no"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_attachment">

                            <div class="o_kanban_image">
                                <div class="o_kanban_image_wrapper">
                                    <t t-set="webimage"
                                       t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>

                                    <img t-if="webimage"
                                         t-att-src="kanban_image('document.document', 'document', record.id.raw_value)"
                                         t-att-alt="record.name.raw_value"
                                         class="o_attachment_image o_kanban_image_fill_left o_kanban_image_full"/>

                                    <div t-elif="!webimage" class="o_image o_image_thumbnail"
                                         t-att-data-mimetype="record.mimetype.value"/>
                                </div>
                            </div>

                            <div class="o_kanban_details">
                                <div class="o_kanban_details_wrapper">
                                    <div t-att-title="record.name.raw_value" class="o_kanban_record_title">
                                        <strong>
                                            <field name="name" class="o_text_overflow"/>
                                        </strong>
                                    </div>
                                    <span>
                                        Created On:
                                        <field name="create_date"/>
                                    </span>
                                    <span style="color:blue;font-size:11px;background-color:gold;">
                                        <field name="mimetype" class="o_text_overflow"/>
                                    </span>
                                    <t t-if="record.directory_id.value">
                                        <span style="color:blue;">
                                            Directory:
                                            <t t-esc="record.directory_id.value"/>
                                        </span>
                                    </t>
                                    <t t-if="record.user_ids.value">
                                        <span class="oe_kanban_list_many2many" style="color:red;">
                                            <field name="user_ids" widget="many2many_tags"/>
                                        </span>
                                    </t>
                                    <t t-if="record.parent_document_id.value">
                                        <span style="color:green;">
                                            Parent Doc:
                                            <t t-esc="record.parent_document_id.value"/>
                                        </span>
                                    </t>
                                    <t t-if="record.revised_document_id.value">
                                        <span style="color:green;">
                                            Revised Doc:
                                            <t t-esc="record.revised_document_id.value"/>
                                        </span>
                                    </t>
                                    <t t-if="record.revision_no.value">
                                        <span style="color:green;">
                                            Revision No:
                                            <t t-esc="record.revision_no.value"/>
                                        </span>
                                    </t>

                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_tags_section mb-2">
                                            <field name="tag_ids" widget="many2many_tags"/>
                                        </div>
                                        <button name="revise_document" class="btn btn-primary pull-right"
                                                style="margin-left:10px;"
                                                attrs="{'invisible': [('revised_document_id', '!=', False)]}"
                                                type="object">Revise
                                        </button>
                                        <button name="action_document_send" class="btn btn-primary pull-right"
                                                type="object">Share
                                        </button>
                                        <button name="action_document_details" class="btn btn-secondary pull-right"
                                                type="object" style="margin-right:10px;">Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
